# NyayLens Configuration
# Copy this to .env and fill in your actual values

# Environment
ENV=development

# Database
DATABASE_URL=sqlite:///./data/nyaylens.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/nyaylens
REDIS_URL=redis://localhost:6379

# Authentication (CHANGE THESE!)
JWT_SECRET=your-secret-key-here-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# API Keys (ADD YOUR KEYS)
OPENAI_API_KEY=sk-your-openai-api-key-here
SENTRY_DSN=https://your-sentry-dsn-here

# Features
ENABLE_LLM_CLASSIFICATION=false
ENABLE_WEBSOCKETS=true
ENABLE_CACHING=true

# Logging
LOG_LEVEL=INFO

# News Ingestion
RSS_FEEDS_ENABLED=true
MAX_ARTICLES_PER_FEED=15
DEFAULT_DAYS_BACK=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS
ALLOWED_ORIGINS=http://localhost:5500,http://localhost:3000,https://yourdomain.com
